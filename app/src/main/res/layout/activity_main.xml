<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@color/whitebackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <LinearLayout
            android:weightSum="10"
            android:layout_margin="5pt"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Email"
                android:ems="10"
                android:id="@+id/editText" android:layout_weight="1"/>
        <Button
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimary"
                android:text="aceptar"
                android:onClick="bAceptarEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"/>
        <Button
                android:background="@color/colorPrimary"
                android:layout_marginLeft="5dp"
                android:text="enviar"
                android:onClick="bEnviarEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button2" android:layout_weight="1"/>
    </LinearLayout>

    <TableLayout
            android:background="@color/whitebackground"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableRow
                android:layout_marginBottom="5pt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:background="#FFFF"
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu1" android:onClick="buClick"/>
            <Button
                    android:background="#FFFF"
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu2" android:onClick="buClick"/>
            <Button
                    android:background="#FFFF"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu3" android:onClick="buClick"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="5pt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:background="#FFFF"
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu4" android:onClick="buClick"/>
            <Button
                    android:background="#FFFF"
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu5" android:onClick="buClick"/>
            <Button
                    android:background="#FFFF"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu6" android:onClick="buClick"/>
        </TableRow>
        <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:background="#FFFF"
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu7" android:onClick="buClick"/>
            <Button
                    android:background="#FFFF"
                    android:layout_marginRight="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu8" android:onClick="buClick"/>
            <Button
                    android:background="#FFFF"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:id="@+id/bu9" android:onClick="buClick"/>
        </TableRow>

    </TableLayout>

</LinearLayout>